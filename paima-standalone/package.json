{
  "name": "@standalone/paima-engine",
  "author": "",
  "license": "ISC",
  "version": "1.0.0",
  "description": "Paima Engine standalone, aka executable binary wrapper around the engine core.",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "type": "module",
  "files": [
    "/build"
  ],
  "bin": "packaged/engineCorePacked.js",
  "pkg": {
    "scripts": [],
    "assets": [
      "packaged/*.wasm",
      "packaged/paima-sdk/**/*",
      "packaged/templates/**/*",
      "packaged/smart-contract/**/*"
    ],
    "targets": [
      "node16-linux",
      "node16-macos-x64",
      "node16-win-x64"
    ],
    "outputPath": "packaged"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "node ./esbuildconfig.cjs",
    "build:binary": "npm run build && npx pkg packaged/engineCorePacked.js --options \"experimental-specifier-resolution=node,no-warnings\" --config package.json"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.3",
    "esbuild": "^0.17.4"
  }
}
